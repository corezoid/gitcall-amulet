apiVersion: batch/v1
kind: Job
metadata:
  name: RELEASE-NAME-gitcall-amulet-docker-engine-network-policy-test
  annotations:
    "helm.sh/hook": test
  labels:
    release: "RELEASE-NAME"
    app: "gitcall"
    tier: "gitcall_amulet"
spec:
  activeDeadlineSeconds: 180 # 3min
  ttlSecondsAfterFinished: 360 # 6min
  backoffLimit: 0
  template:
    metadata:
      labels:
        tier: "docker_server"
        http: "false"
    spec:
      restartPolicy: Never
      containers:
        - name: main
          imagePullPolicy: "IfNotPresent"
          image: docker-hub.middleware.biz/gitcall/gitcall-amulet:aVersion
          command: ["/app/network_policy_test"]
          args:
            - "-test.v"
            - "--np-allow=allow:4444"
            - "--np-deny=deny:5555"
          resources:
            limits:
              cpu: 100m
              memory: 50Mi
            requests:
              cpu: 100m
              memory: 50Mi
      imagePullSecrets:
      - name: "the-image-pull-secret"
---
